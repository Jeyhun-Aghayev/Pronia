@model UpdateProductVm

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="SKU" class="form-label">SKU</label>
                <input asp-for="SKU" class="form-control">
                <span asp-validation-for="SKU" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" style="color:red"></span>
            </div>
        </div>

        <div class="row align-items-center">
            <div class="mb-3 col-md-6">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                <span asp-validation-for="Description" style="color:red"></span>
            </div>

            <div class="mb-3 col md-3">
                <label asp-for="CategoryId" class="form-label">Categories</label>
                <select class="form-select" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories,nameof(Category.Id),nameof(Category.Name))">
                    <option selected>Open this select menu</option>
                </select>
                <span asp-validation-for="CategoryId" style="color:red"></span>
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-3">
                <label asp-for="MainImage" class="form-label">Main Image</label>
                <img src="~/Upload/ProductImage/@Model.productİmages?.Where(p=>p.Isprime==true).FirstOrDefault().Url" />
                <input asp-for="MainImage" class="form-control">
                <span asp-validation-for="MainImage" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="SecondImage" class="form-label">SecondImage</label>
                <img src="~/Upload/ProductImage/@Model.productİmages?.Where(p=>p.Isprime==true).FirstOrDefault().Url" />
                <input asp-for="SecondImage" class="form-control">
                <span asp-validation-for="SecondImage" style="color:red"></span>
            </div><div class="mb-3 col-md-3">
                <label asp-for="DetailImages" class="form-label">Additional phodos</label>
                @if (Model.DetailImages != null)
                {
                    @foreach (var item in Model.DetailImages)
                    {
                        <img src="~/Upload/ProductImage/@Model.productİmages?.Where(p=>p.Isprime==null).FirstOrDefault().Url" />
                    }
                }
                <input asp-for="DetailImages" class="form-control">
                <span asp-validation-for="DetailImages" style="color:red"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>